{% extends "../_layout.twig" %}
{% set pageTitle = 'P2S Inc | We Are P2SINC | P2S Inc' %}
{% block styles %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@3.6.12/dist/css/splide.min.css">
{% endblock styles %}

{% set pageName = 'index' %}


{% set nav_side_navs = [
    {
        text: "OUR DIVISIONS",
        block: "hero",
        link_to: "#divisions"
    },
    {
        text: "OUR DIVISIONS",
        block: "divisions",
        link_to: "#splide"
    },
    {
        text: "NEWS",
        block: "splide",
        link_to: "#connect"
    },
    {
        text: "JOIN US",
        block: "connect",
        link_to: "#footer-container"
    }
    ]
    %}

    {% set content = {
        hero: {
            header: 'We Are<br> P2S Inc.',
            subheader: 'Our mission is to design a better future, every day. We inspire staff to design sustainable solutions for our clients.',
            text: '',
            link: 'learn more about us  &#8594',
            linkto: '#',
            carousel_data: 'index_1'
        }
    
    }
        
    %}


{% block content %}
    {% include '../components/_nav_side.twig' with nav_side_navs %}
    
    <div class="fade-block"></div>

    <div class='content-container'>
        
        {% include '../components/_hero_carousel.twig' with { id : 'hero', content } %}
        
        {% include '../components/_our-divisions.twig' with { id : 'divisions' } %}

        {% include '../components/_splide.twig' with { id : 'splide' } %}

        {% include '../components/_connect.twig' with { id : 'connect' } %}

    </div>
    
{% endblock content %} 

{% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@3.6.12/dist/js/splide.min.js"></script>
    <script type='module' src='./assets/js/index.js'></script>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@0.4.0/dist/lottie-player.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.9.4/lottie.min.js" integrity="sha512-ilxj730331yM7NbrJAICVJcRmPFErDqQhXJcn+PLbkXdE031JJbcK87Wt4VbAK+YY6/67L+N8p7KdzGoaRjsTg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock scripts %} 
